<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Blog 9000{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">

        <link rel="stylesheet" href="{{ asset(css) }}">
        <script src="/bootstrap-5.0.2-dist/js/bootstrap.min.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <a class="navbar-brand" href="{{path('blog')}}">Blog 9000</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    {% if app.user %}
                
                    <li class="nav-item ">
                        <a class="nav-link"  href="{{path('app_user')}}">Profil</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link"  href="{{path('app_logout')}}">Déconnexion</a>
                    </li>
                    {% else %}
                    <li class="nav-item ">
                        <a class="nav-link"  href="{{path('register')}}">Inscription</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link"  href="{{path('signup')}}">Connexion</a>
                    </li>
                    {% endif %}
                    <li class="nav-item ">
                        <a class="nav-link"  href="{{path('articles')}}">Articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('newArticle')}}">Créer un article</a>
                    </li>

                </ul>
            </div>
        </nav>
        <div class="container">
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>